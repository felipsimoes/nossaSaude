<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.nossasaudeapp.activities.MedicoViewActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMedico">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorMedico"
            app:popupTheme="@style/PopupOverlay" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:background="@android:color/white"
            android:padding="@dimen/default_padding_view">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Médico"
                android:id="@+id/nome_medico_view"
                android:textSize="20sp"
                android:paddingTop="@dimen/default_padding_view"
                android:paddingBottom="@dimen/default_padding_view" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Especialização"
                android:id="@+id/especializacao_medico_view"
                android:textSize="20sp"
                android:paddingTop="@dimen/default_padding_view"
                android:paddingBottom="@dimen/default_padding_view" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Endereço"
                android:id="@+id/endereco_medico_view"
                android:textSize="20sp"
                android:paddingTop="@dimen/default_padding_view"
                android:paddingBottom="@dimen/default_padding_view" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Telefone"
                android:id="@+id/telefone_medico_view"
                android:textSize="20sp"
                android:paddingTop="@dimen/default_padding_view"
                android:paddingBottom="@dimen/default_padding_view" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>