<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dadosconsulta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackRet"
    tools:context="com.example.app.nossasaudeapp.activities.DadosConsultaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/txtconsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Consulta"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtdesconsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/description"
            android:layout_marginBottom="5dp"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/consHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textSize="18sp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/accentLight"
                android:layout_marginBottom="@dimen/default_margin_layout"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/consData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textSize="18sp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/accentLight"
                android:layout_marginBottom="@dimen/default_margin_layout"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnSalvarConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
