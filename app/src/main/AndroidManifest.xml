<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app.nossasaudeapp">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MedicamentoActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".activities.PessoaActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".activities.ConfiguracaoActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".activities.FichaActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".activities.CadastroUsuarioActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".activities.DadosPessoaActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".activities.DadosMedicamentoActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme1"/>
        <activity
            android:name=".activities.ListaMedicamentosActivity"
            android:theme="@style/AppTheme1"/>

        <receiver android:name=".AlarmReceiver" />

        <service android:name=".AlarmService" />

    </application>

</manifest>